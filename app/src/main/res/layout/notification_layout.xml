<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:clickable="true"
	android:orientation="horizontal"
	>

	<ImageView
		android:id="@+id/hotlist_bell"
		android:layout_width="@dimen/iv_icon_very_small"
		android:layout_height="@dimen/iv_icon_very_small"
		android:layout_centerInParent="true"
		android:layout_margin="0dp"
		android:contentDescription="Notification Icon"
		android:gravity="center"
		android:src="@drawable/ic_notify"
		/>

	<id.pastakangen.com.pastakangen.costum_overwrite.CustomTextView
		android:id="@+id/tv_count"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/padding_very_small"
		android:background="@color/colorWhite"
		android:gravity="center"
		android:minWidth="20dp"
		android:text="2"
		android:textColor="@color/colorWhite"
		android:textSize="@dimen/text_size_extra_small"
		/>
</LinearLayout>